@model EmpowerU.Models.Review

@{
    ViewBag.Title = "Submit a Review";
}

<div class="container">
    <h2>Submit a Review</h2>
    @using (Html.BeginForm("CreateReview", "Reviews", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Title, "Review Title")
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Enter Title" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comment, "Review Body")
            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", rows = 4, placeholder = "Type Comment" })
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rating, "Rating")
            <select class="form-control" name="Rating">
                <option value="1">1 Star</option>
                <option value="2">2 Stars</option>
                <option value="3">3 Stars</option>
                <option value="4">4 Stars</option>
                <option value="5">5 Stars</option>
            </select>
            @Html.ValidationMessageFor(model => model.Rating)
        </div>

        <div class="form-group">
           @* @ @Html.LabelFor(model => model.ReviewerName, "Your Name")
            @Html.TextBoxFor(model => model.ReviewerName, new { @class = "form-control", placeholder = "Enter your name" })
            @Html.ValidationMessageFor(model => model.ReviewerName) *@
        </div>

        <button type="submit" class="btn btn-primary">Submit Review</button>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
