@model IEnumerable<Business>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid mt-4">
    <!-- Header section -->
    <div class="row align-items-center justify-content-between">
        <!-- EmpowerU logo/text on the left -->
        <div class="col-md-6 text-left">
            <h1>EmpowerU</h1>
        </div>

        <!-- Buttons and User Profile on the right -->
        <div class="col-md-6 text-right clearfix">
            <!-- Logged-in User Profile with Dropdown should come first in the code, but float to the right -->
            <div class="dropdown d-inline-block" style="float: right; margin-left: 15px;">
                <a href="#" class="dropdown-toggle" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="https://th.bing.com/th/id/OIP.qnBU1qkkbFfp4tQjrMVx9wHaHw?rs=1&pid=ImgDetMain" alt="Profile Picture" class="rounded-circle" style="width: 40px; height: 40px;">
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="/Account/Profile">View Profile</a>
                    <a class="dropdown-item" href="/Account/Settings">Settings</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/Account/Logout">Logout</a>
                </div>
            </div>

            <!-- First 3 buttons on the right -->
            <button class="btn btn-outline-secondary" style="float: right; margin-right: 10px;">Button 3</button>
            <button class="btn btn-outline-secondary" style="float: right; margin-right: 10px;">Button 2</button>
            <button class="btn btn-outline-secondary" style="float: right; margin-right: 10px;">Button 1</button>
        </div>
    </div>
</div>


    <!-- Main section with centered content -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-4 text-center">
            <!-- Adjusted column width -->
            <!-- Circular space for the business logo -->
            <img src="https://wallpapercave.com/wp/wp6542570.jpg" alt="Business Logo" class="rounded-circle" style="width: 350px; height: 350px;">

            <!-- Edit Business Profile as an underlined link -->
            <div class="mt-3">
                <a href="/Businesses/Edit" class="btn btn-link" style="text-decoration: underline; color: #4a4a4a;">Edit Business Profile</a>
            </div>

            <!-- Manage Appointments and View Insights buttons -->
            <div class="mt-4">
                <a href="/Appointments/Manage" class="btn btn-secondary btn-block mb-3" style="width: 200px; margin-left: auto; margin-right: auto;">Manage Appointments</a>
                <a href="/Insights/View" class="btn btn-secondary btn-block" style="width: 200px; margin-left: auto; margin-right: auto;">View Insights</a>
            </div>
        </div>
    </div>

<!-- Add styles if needed -->
<style>
    .btn {
        min-width: 100px; /* Ensures the buttons are the same size */
    }

    /* Center-aligns the circular profile and other content */
    .btn-block {
        display: block;
        width: 100%;
    }

    .rounded-circle {
        object-fit: cover;
    }
</style>
