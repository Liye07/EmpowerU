@model Business

@{
    ViewData["Title"] = "Details";
}


<div class="container mt-5">
    <div class="row">
        <!-- Business Identifier Section -->
        <div class="col-md-6">
            <div class="text-center">
                <!-- Placeholder for business logo or identifier -->
                <div class="bg-light border" style="width: 100%; height: 300px; display: flex; justify-content: center; align-items: center;">
                    <img src="https://static.vecteezy.com/system/resources/previews/024/284/257/original/beauty-salon-logo-design-free-vector.jpg" alt="Profile Picture" class="squared" width="300" height=300">
                </div>
            </div>

            <!-- Placeholder for Business Details -->
            <div class="mt-4">
                <h4>Business Details</h4>
                <p>@Model.Description</p>
                <!-- Add any other business-specific details -->
                <h4>Rating</h4>
                <p>@Model.Rating</p>
                <h4>Email</h4>
                <p>@Model.Email</p>
                <h4>Location</h4>
                <p>@Model.LocationID.ToString()</p>
            </div>
        </div>

        <!-- Booking Section -->
        <div class="col-md-6">
            <div class="card p-3">
                <h4 class="text-center mb-4">@Model.Name</h4>

                <form asp-action="BookService" method="post" class="form-horizontal">
                    <div class="form-group mb-3">
                        <label for="Service" class="form-label">Select service</label>
                        <select class="form-select" id="Service" name="ServiceID">
                            @foreach (var service in Model.Email) // Model.Services 
                            {
                                @* <option value="@service.ServiceID">@service.ServiceName</option> *@
                            }
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Date" class="form-label">Pick date</label>
                        <input type="date" class="form-control" id="Date" name="BookingDate" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Book</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
