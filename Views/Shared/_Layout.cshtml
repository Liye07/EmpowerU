<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmpowerU</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmpowerU.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
    

        /* colour of footer */
        footer {
            color: #f0e6db;
        }

            footer .bottom-bar {
                background-color: #211522;
                color: #f0e6db;
            }


    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">EmpowerU</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "RegisterBusiness" ? "active" : "")" href="@Url.Action("RegisterBusiness", "Account")">List Business</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Business"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"] == "BusinessDashboard" ? "active" : "")" href="@Url.Action("BusinessDashboard", "Business")">Business Dashboard</a>
                                </li>
                            }
                            @if (User.IsInRole("Consumer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"] == "ConsumerDashboard" ? "active" : "")" href="@Url.Action("ConsumerDashboard", "Consumer")">Consumer Dashboard</a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/path/to/profile-image.jpg" alt="Profile" class="rounded-circle" width="30" height="30" />
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">Profile</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Settings", "Account")">Settings</a></li>
                                    <li>
                                        <form asp-action="Logout" asp-controller="Account" method="post" class="m-0">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#">Gallery</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Professionals</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white" href="@Url.Action("Login", "Account")">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div class="container-fluid">
        <div class="row">
            @* Render Sidebar if on specific pages *@
           @*  @{
                var pagesWithSidebar = new[] { "BusinessDashboard", "ConsumerDashboard", "EditBusinessProfile", "EditConsumerProfile", "ChangePassword", "Appointment" };
                var currentPage = ViewData["ActivePage"]?.ToString();
            } *@
@* 
            @if (pagesWithSidebar.Contains(currentPage))
            {
                <aside class="col-md-3">
                    @Html.Partial("_Sidebar") <!-- Render the sidebar here -->
                </aside>
            }
 *@
            <main class="col-md-9">
                @RenderBody() <!-- Render the main content -->
            </main>
        </div>
    </div>
    <footer >
        <div class="container py-3">
            <div class="row">
                <div class="col-lg-4 col-md-12 mb-2">
                    <h6 class="text-uppercase">Contact Us</h6>
                    <p class="m-0">
                        Phone: +1 234 567 890<br>
                        Email: support@empoweru.com<br>
                        Address: 123 EmpowerU St, Gqeberha, South Africa
                    </p>
                </div>
                <div class="col-lg-4 col-md-6 mb-2">
                    <h6 class="text-uppercase">About Us</h6>
                    <p class="m-0">
                        EmpowerU connects consumers with top-rated service providers in beauty and wellness.
                    </p>
                </div>
                <div class="col-lg-4 col-md-6 mb-2">
                    <h6 class="text-uppercase">Follow Us</h6>
                    <a href="#" class="text-light me-2" aria-label="Follow us on Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="text-light me-2" aria-label="Follow us on Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="text-light" aria-label="Follow us on Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="text-center p-2" style="background-color:#211522 ;">
            © 2024 EmpowerU. All rights reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
