
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Branding -->
            <div class="text-center mb-4">
                <h1 class="fw-bold">EmpowerU</h1>
            </div>

            <!-- Social Media Login Buttons -->
            <div class="d-grid gap-3 mb-4">
                <div class="text-center mb-3">
                    <p>Sign up using:</p>
                    <a href="#" class="btn btn-primary mx-1">
                        <i class="fab fa-facebook-f"></i> Facebook
                    </a>
                    <a href="#" class="btn btn-danger mx-1">
                        <i class="fab fa-instagram"></i> Instagram
                    </a>
                </div>
            </div>

            <!-- Divider -->
            <div class="text-center mb-4">
                <hr />
            </div>

            <!-- Email and Password Login Form -->
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" required />
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" required />
                </div>

                <!-- Forgot Password Link -->
                <div class="mb-3 text-end">
                    <a href="@Url.Action("ForgotPassword", "Account")" class="text-muted">Forgot password?</a>
                </div>

                <!-- Sign In Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark btn-block">Sign in</button>
                </div>
            </form>

            <!-- Sign Up Option -->
            <div class="text-center mt-3">
                <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Sign Up Now</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />