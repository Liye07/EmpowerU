@model IEnumerable<EmpowerU.Models.Report>

@{
    ViewBag.Title = "Reports and Analytics";
}

<div class="container">
    <h2>Reports and Analytics</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Business Name</th>
                <th>Date Range</th>
                <th>Metrics Summary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.Business</td>
                    <td>@report.DateRange</td>
                    <td>@report.Metrics</td>
                    <td>
                        <a href="@Url.Action("Details", "Reports", new { id = report.ReportID })" class="btn btn-info">View Details</a>
                        <a href="@Url.Action("Edit", "Reports", new { id = report.ReportID })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Reports", new { id = report.ReportID })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>