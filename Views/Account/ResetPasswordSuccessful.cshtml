@model EmpowerU.Models.User

@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-success">Success!</h1>
                <p>Your password has been successfully reset.</p>
            </div>

            <div class="text-center">
                <p>Click below to return to the login page and access your account.</p>

                <div class="d-grid">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-dark">Go to Login</a>
                </div>
            </div>

            <div class="text-center mt-3">
                <p>If you didn't request a password reset, please contact support immediately.</p>
            </div>
        </div>
    </div>
</div>
