@model Login

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Branding -->
            <div class="text-center mb-4">
                <h1 class="fw-bold">EmpowerU</h1>
            </div>

            <!-- Divider -->
            <div class="text-center mb-4">
                <hr />
            </div>

            <!-- Forgot Password Form -->
            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <p>Please enter your email address or mobile number to search for your account.</p>
                </div>

                <div class="mb-3">
                    <input type="email" class="form-control" id="Email" name="Email" placeholder = "Enter email or mobile number" autocomplete="email" required />
                    <div class="invalid-feedback">
                        Please enter a valid email address.
                    </div>
                </div>
                <div class="mb-3">
                    <p</p>
                </div>

                <!-- Continue Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark btn-block">Continue</button>
                </div>
            </form>

            <!-- Back to Login Option -->
            <div class="text-center mt-3">
                <p>Don't have an account? <a href="@Url.Action("Login", "Account")">Sign Up</a></p>
            </div>

        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<!-- Optional: Include jQuery and jQuery validation for client-side validation -->
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
