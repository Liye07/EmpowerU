@model EmpowerU.Models.User

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h1 class="fw-bold">Reset Password</h1>
            </div>

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()

                <!-- Hidden Email Field -->
                <input type="hidden" asp-for="Email" />

                <!-- Hidden Token Field -->
                <input type="hidden" name="token" value="@ViewData["Token"]" />

                <!-- New Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter new password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Update Password</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <p>Remembered your password? <a href="@Url.Action("Login", "Account")">Login</a></p>
            </div>
        </div>
    </div>
</div>
