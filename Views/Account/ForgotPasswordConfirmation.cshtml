@model Login

@{
    ViewData["Title"] = "Password Reset Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Branding -->
            <div class="text-center mb-4">
                <h1 class="fw-bold">EmpowerU</h1>
            </div>

            <!-- Divider -->
            <div class="text-center mb-4">
                <hr />
            </div>

            <!-- Confirmation Message -->
            <div class="text-center mb-4">
                <p>A link to reset your password has been sent to your email address. Please check your inbox and follow the instructions to complete the password reset process.</p>
            </div>

            <!-- Back to Login Button -->
            <div class="d-grid">
                <a href="@Url.Action("Login", "Account")" class="btn btn-dark btn-block">Back to Login</a>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
